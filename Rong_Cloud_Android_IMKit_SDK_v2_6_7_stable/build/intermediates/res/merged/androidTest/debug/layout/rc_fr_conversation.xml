<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rc_normal_bg">

    <layouts.fragment
        android:id="@android:id/toggle"
        android:name="io.rong.imkit.layouts.fragment.MessageInputFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <layouts.fragment
        android:id="@android:id/list"
        android:name="io.rong.imkit.layouts.fragment.MessageListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@android:id/toggle" />
</RelativeLayout>